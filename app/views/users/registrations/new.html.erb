
<div class="container">
<h2>Реєстрація</h2><br>

<%= form_for(resource, :as => resource_name, :validate => true, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label "Email-адрес:" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Пароль:" %>
    <% if @minimum_password_length %>
    <em>(мінімум <%= @minimum_password_length %> символів)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :validate => {:confirmation => true}, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Повторіть пароль:" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Реєстрація", class: "btn btn-danger" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>